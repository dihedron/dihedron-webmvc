<?xml version="1.0" encoding="UTF-8"?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="interceptors.xsd">
	<stack id="default">
		<interceptor id="profiler" class="org.dihedron.webmvc.interceptors.impl.Profiler"/>
		<interceptor id="dumper" class="org.dihedron.webmvc.interceptors.impl.Dumper">		 
			<parameter>
				<key>exclude</key>
				<value>\s*org\.apache\.tomcat\.util\.scan\.MergedWebXml\s*</value>
				<!-- 
				<value>^[A-Z_]*$|^org\.apache.*|^javax\.servlet.*|^org\.dihedron\.webmvc.*|^j_.*</value>
				-->
			</parameter>
			<parameter>
				<key>scopes</key>
				<value>form,request,conversation,session,sticky,application</value>
			</parameter>
		</interceptor>
		<!-- 
		<interceptor id="double-submit" class="org.dihedron.strutlets.interceptors.impl.Resubmit">
			<parameter>
				<key>result</key>
				<value>error_double_submit</value>
			</parameter>
		</interceptor>
		-->
	</stack>
</configuration>
