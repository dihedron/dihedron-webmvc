<?xml version="1.0"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>

    <filter>
        <filter-name>Zephyr Controller</filter-name>
        <display-name>Zephyr Framework Controller</display-name>
        <filter-class>org.dihedron.zephyr.ActionController</filter-class>
        <init-param>
            <param-name>zephyr:actions-packages</param-name>
            <param-value>org.example.demo.part1.actions,org.example.demo.part2.actions,org.example.demo.part1.actions</param-value>
        </init-param>

        <init-param>
            <param-name>zephyr:interceptors-packages</param-name>
            <param-value>org.example.demo.part1.interceptors,org.example.demo.part2.interceptors</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>Zephyr Controller</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>
